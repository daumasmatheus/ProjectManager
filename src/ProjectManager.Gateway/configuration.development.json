{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  },
  "Routes": [
    //AUTHENTICATION
    {
      "DownstreamPathTemplate": "/api/authentication/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44010
        }
      ],
      "UpstreamPathTemplate": "/auth/{path}",
      "UpstreamHttpMethod": [ "POST" ]
    },
    //PERSON
    {
      "DownstreamPathTemplate": "/api/person/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44020
        }
      ],
      "UpstreamPathTemplate": "/person/{path}",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    }
  ]
}
