{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  },
  "Routes": [
    //AUTHENTICATION
    {
      "DownstreamPathTemplate": "/api/authentication/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44010
        }
      ],
      "UpstreamPathTemplate": "/auth/{path}",
      "UpstreamHttpMethod": [ "POST" ],
      "SwaggerKey": "Authentication"
    },
    //PERSON
    {
      "DownstreamPathTemplate": "/api/person/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44020
        }
      ],
      "UpstreamPathTemplate": "/person/{path}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "SwaggerKey": "Person"
    },
    //TEAM
    {
      "DownstreamPathTemplate": "/api/team/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44030
        }
      ],
      "UpstreamPathTemplate": "/team/{path}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "SwaggerKey": "Team"
    },
    //PROJECTS
    {
      "DownstreamPathTemplate": "/api/project/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44040
        }
      ],
      "UpstreamPathTemplate": "/project/{path}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "SwaggerKey": "Project"
    },
    //TASKS
    {
      "DownstreamPathTemplate": "/api/task/{path}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44050
        }
      ],
      "UpstreamPathTemplate": "/task/{path}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "SwaggerKey": "Task"
    }
  ],
  "SwaggerEndpoints": [
    {
      "Key": "Authentication",
      "Config": [
        {
          "Name": "Authentication/Authorization API",
          "Version": "v1",
          "Url": "http://localhost:44010/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "Person",
      "Config": [
        {
          "Name": "Person API",
          "Version": "v1",
          "Url": "http://localhost:44020/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}
